@model IEnumerable<VotingApplication.Models.Role>

@{
    ViewData["Title"] = "Roles List";
    Layout = "~/Views/Shared/_LayoutRole.cshtml";
}

<h1>Roles List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.RolesId)</th>
            <th>@Html.DisplayNameFor(model => model.RolesName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RolesId)</td>
                <td>@Html.DisplayFor(modelItem => item.RolesName)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RolesId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.RolesId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.RolesId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
