@model IEnumerable<VotingApplication.Models.Election>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ElectionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ElectionStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ElectionStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ElectionEndDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ElectionTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ElectionStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ElectionStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ElectionEndDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ElectionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ElectionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ElectionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
